
@model  LandingPageModel

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid header1 header2 minify-header appfamily-header">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<h1>Optical Character Recognition Solution</h1>
				<h4>Extract text from raster images via OCR technology. Use Aspose.OCR On Premise & Cloud APIs to develop your own apps or simply use ours.</h4>
			</div>
			<div class="col-md-4 tc">
				<img class=" col-xs-12" src="../img/aspose_OCR-brand.png" alt="Aspose.OCR" width="320" />
			</div>
		</div>
	</div>
</div>
<div class="container-fluid productfamilypage bg-white pdb-5">
	<div class="row">
		<div class="container tc">
			<div class="clearfix">&nbsp;</div>
			<div class="clearfix">&nbsp;</div>
			<h3>@string.Format(@Model.Resources["AsposeProductFamilyInclude"], @Model.Resources["AsposeOCR"])  </h3>
			<div class="clearfix">&nbsp;</div>
			<div class="clearfix">&nbsp;</div>

			<div class="col-lg-4 productfamily_box">
				<div class="productfamilytitle">
					<div class="imgblock">
						<img src="../img/aspose_image-app.png" alt="Aspose.OCR for .NET" />
					</div>
					<a href="/ocr/scan-image"><span class="spanclass">@Model.Resources["AsposeOCR"] @Model.Resources["AsposeProductFor"] <em>Convert Image to Text</em></span><em>Convert your scanned documents to text with automatic language and document layout detection.</em></a>
				</div>
			</div>
			
		</div>
	</div>
</div>
<div class="spacer">&nbsp;</div>
